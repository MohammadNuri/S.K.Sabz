                                {
                                    var givenNameClaim = User.FindFirst(ClaimTypes.GivenName);
                                    var surnameClaim = User.FindFirst(ClaimTypes.Surname);
                                    var roleClaim = User.FindFirst(ClaimTypes.Role);

