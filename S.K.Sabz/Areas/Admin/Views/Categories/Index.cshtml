@section Scripts
{
	<script src="/AdminTemplate/assets/js/widgets.bundle.js"></script>
	<script src="/AdminTemplate/assets/js/custom/widgets.js"></script>
	<script src="/AdminTemplate/assets/js/custom/apps/chat/chat.js"></script>
	<script src="/AdminTemplate/assets/js/custom/utilities/modals/upgrade-plan.js"></script>
	<script src="/AdminTemplate/assets/js/custom/utilities/modals/create-app.js"></script>
	<script src="/AdminTemplate/assets/js/custom/utilities/modals/users-search.js"></script>
	<script src="/AdminTemplate/assets/js/custom/utilities/modals/create-campaign.js"></script>
	<script src="/AdminTemplate/assets/js/custom/utilities/modals/new-target.js"></script>
	<link href="/AdminTemplate/assets/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
	<script src="/AdminTemplate/assets/sweetalert2/sweetalert2.min.js"></script>
		


	<script>

		document.addEventListener("DOMContentLoaded", function () {
			// Get references to elements
			const modal = document.getElementById("kt_modal_new_target");
			const nameInput = document.getElementById("nameInput");
			const submitButton = document.getElementById("kt_modal_new_target_submit");

			submitButton.addEventListener("click", function (e) {
				e.preventDefault(); // Prevent default form submission

				const name = nameInput.value.trim(); // Trim whitespace from the input value

				// Perform data validation
				if (!name) {
					// If name is empty, display an error message
					Swal.fire({
						text: "لطفاً نام دسته بندی را وارد کنید.", // Error message in Farsi
						icon: "error",
						buttonsStyling: false,
						confirmButtonText: "باشه فهمیدم!",
						customClass: { confirmButton: "btn btn-primary" },
					});
					return; // Exit the function without submitting the form
				}

				// Send data using AJAX only if there are no errors
				$.ajax({
					url: "/Admin/Categories/AddNewCategory", // Replace with your actual controller action URL
					method: "POST",
					data: { Name: name }, // Pass the name property only
					success: function (data) {
						console.log("Data sent successfully:", data);
						window.location.reload();
					},
					error: function (error) {
						console.error("Error sending data:", error);
						// Handle errors (e.g., display error message)
						Swal.fire({
							text: "متأسفیم ، خطایی رخ داد!",
							icon: "error",
							buttonsStyling: false,
							confirmButtonText: "باشه فهمیدم!",
							customClass: { confirmButton: "btn btn-primary" },
						});
					},
				});
			});
		});

	</script>


	<script>
		function DeleteCategory(CatId) {
			swal.fire({
				title: 'حذف دسته بندی',
				text: "کاربر گرامی از حذف دسته بندی مطمئن هستید؟",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#d33',
				cancelButtonColor: '#7cacbe',
				confirmButtonText: 'بله ، دسته بندی حذف شود',
				cancelButtonText: 'خیر'
			}).then((result) => {
				if (result.value) {
					var postData = {
						'CatId': CatId,
					};

					$.ajax({
						contentType: 'application/x-www-form-urlencoded',
						dataType: 'json',
						type: "POST",
						url: "/Admin/Categories/DeleteCategory",
						data: postData,
						success: function (data) {
							if (data.isSuccess == true) {
								swal.fire(
									'موفق!',
									data.message,
									'success'
								).then(function (isConfirm) {
									location.reload();
								});
							}
							else {

								swal.fire(
									'هشدار!',
									data.message,
									'warning'
								);

							}
						},
						error: function (request, status, error) {
							alert(request.responseText);
						}

					});

				}
			})
		}
	</script>


}




